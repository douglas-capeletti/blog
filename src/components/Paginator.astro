---
import { type IPage } from "../utils/types";

const page: IPage = Astro.props.page;
---

<section class="flex space-x-8 justify-center text-xl pt-16 font-bold">
  {
    page.url.prev && (
      <a href={page.url.prev} class="mr-8" data-test="paginator-prev">
        <span>&larr;</span> Previus page
      </a>
    )
  }

  {
    page.url.next && (
      <a href={page.url.next} data-test="paginator-next">
        Next Page <span>&rarr;</span>
      </a>
    )
  }
</section>

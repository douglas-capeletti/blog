---
import Post from "../components/Post.astro";
import type { IPost } from "../utils/types";
import PageLayout from "./PageLayout.astro";

const post = Astro.props.post;
const { title, pubDate, description, hero, tags, video } = post?.data ?? {} as IPost;
---

<PageLayout title={title}>
  <Post title={title} pubDate={pubDate} description={description} hero={hero} tags={tags} video={video}>
    <slot />
  </Post>
</PageLayout>

<script>
  import { enableCopyToClipboardButton } from "../utils";
  enableCopyToClipboardButton();
</script>

---
import BackToPage from "../components/BackToPage.astro";
import Post from "../components/Post.astro";
import BasePageLayout from "./BasePageLayout.astro";

const { collection, content } = Astro.props;
const { title, pubDate, description, hero, tags, video } = content;
---

<BasePageLayout title={title}>
  <Post title={title} pubDate={new Date(pubDate)} description={description} hero={hero} tags={tags} video={video}>
    <slot />
  </Post>
  <BackToPage pageName={collection} path={`/${collection}`} />
</BasePageLayout>

<script>
  import { enableCopyToClipboardButton } from "../utils";
  enableCopyToClipboardButton();
</script>

---
import BackToPage from "../components/BackToPage.astro";
import Post from "../components/Post.astro";
import DefaultPageLayout from "./DefaultPageLayout.astro";

const { content } = Astro.props;
const { title, pubDate, description, hero, tags, youtube } = content;
---

<DefaultPageLayout title={title} disableBlur>
  <Post title={title} pubDate={new Date(pubDate)} description={description} hero={hero} tags={tags} youtube={youtube}>
    <slot />
  </Post>
  <BackToPage pageName="Notes" path="/notes" />
</DefaultPageLayout>

<script>
  import { enableCopyToClipboardButton } from "../utils";
  enableCopyToClipboardButton();
</script>

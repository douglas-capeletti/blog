---
import BaseHead from "../components/BaseHead.astro";
import Nav from "../components/Nav.astro";
import { SITE_NAME, SITE_URI } from "../utils/constants";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const seoTitle = `${title ?? SITE_NAME} | ${SITE_URI}`;
---

<html lang="en" class="dark">
  <head>
    <BaseHead title={seoTitle} />
  </head>

  <body class="bg-bg-primary text-text-primary font-body leading-normal">
    <Nav />
    <main class="max-w-5xl mx-auto py-4 lg:py-8">
      <slot />
    </main>
  </body>
</html>

---
import Card from "../components/Card.astro";
import Header from "../components/Header.astro";
import { type ICard } from "../utils/types";

export interface Props {
  title: string;
  description?: string;
  cards: ICard[];
  wideCard?: boolean;
}

const { title, description, cards, wideCard } = Astro.props;
// const totalPages = Math.ceil(page.total / page.size);
// const pageCounter = totalPages > 1 ? `page ${page.currentPage} of ${totalPages}` : undefined;
const pageCounter = undefined;
---

<article class="max-w-6xl mx-auto px-3">
  <Header title={title} description={[description, pageCounter]} />
  <section class=`grid grid-cols-1 ${wideCard ? '' : 'md:grid-cols-2 lg:grid-cols-3'} gap-6 py-8` data-test="articles-section">
    {
      cards.map((c) => (
        <div class="col-span-1">
          <Card 
            tag={c.tag}
            hero={c.hero}
            title={c.title}
            description={c.description}
            pubDate={c.pubDate}
            url={c.url}
            blank={c.blank ?? false} 
          />
        </div>
      ))
    }
  </section>
</article>

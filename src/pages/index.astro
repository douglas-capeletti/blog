---
import HomeHeader from "../components/HomeHeader.astro";
import DefaultPageLayout from "../layouts/DefaultPageLayout.astro";

const title = "Capeletti.dev";
const description = "Codes and notes of a software engineer.";
const options = { Projects: "/projects", Notes: "/notes", About: "/about" };
---

<DefaultPageLayout title={description}>
  <article class="py-12 lg:py-20 max-w-6xl mx-auto my-auto px-3">
    <HomeHeader title={title} description={description} />
    <section class="flex justify-center gap-5 justify-items-center items-center" data-test="articles-section">
      {
        Object.entries(options).map((value) => (
          <a href={value[1]}>
            <button class="p-3 text-white bg-cyan-600 rounded-xl">{value[0]}</button>
          </a>
        ))
      }
    </section>
  </article>
</DefaultPageLayout>

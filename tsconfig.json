{
  "moduleResolution": "node",
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false,
    "plugins": [
      {
        "verbatimModuleSyntax": true,
        "name": "@astrojs/ts-plugin"
      },
    ],
  }
}